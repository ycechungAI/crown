root = true

[*]
end_of_line = lf
indent_style = tab
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[LICENSE*]
indent_style = space

[*.ui]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.rst]
indent_style = tab
indent_size = 4
